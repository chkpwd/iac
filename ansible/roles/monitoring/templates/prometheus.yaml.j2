global:
  scrape_interval: 15s
  external_labels:
      monitor: 'mgmt-srv-01'

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

    basic_auth:
      username: chkpwd
      password: "{{ USR_PASSWORD_SOPS }}"

  - job_name: 'opnsense-node-exporter'
    scheme: http
    static_configs:
      - targets: ['172.16.16.1:9100']

  - job_name: 'apex-legends-exporter'
    scheme: http
    static_configs:
      - targets: ['172.16.16.4:5050']
